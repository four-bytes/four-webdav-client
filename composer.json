{
    "name": "four-bytes/four-webdav-client-php",
    "description": "A modern PHP WebDAV client library for Nextcloud, ownCloud, and other WebDAV servers",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "webdav",
        "nextcloud",
        "owncloud",
        "http",
        "client",
        "php"
    ],
    "authors": [
        {
            "name": "4 Bytes",
            "email": "info@4bytes.de"
        }
    ],
    "homepage": "https://github.com/four-bytes/four-webdav-client-php",
    "support": {
        "issues": "https://github.com/four-bytes/four-webdav-client-php/issues",
        "source": "https://github.com/four-bytes/four-webdav-client-php"
    },
    "require": {
        "php": "^8.1",
        "four-bytes/four-http-client": "^4.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0|^2.0",
        "ext-simplexml": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "php-http/mock-client": "^1.6",
        "nyholm/psr7": "^1.8"
    },
    "suggest": {
        "symfony/http-client": "PSR-18 HTTP client implementation",
        "guzzlehttp/guzzle": "Alternative PSR-18 HTTP client implementation"
    },
    "autoload": {
        "psr-4": {
            "Four\\WebDav\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Four\\WebDav\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../four-http-client",
            "options": {
                "versions": {
                    "four-bytes/four-http-client": "4.0.1"
                }
            }
        }
    ],
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=6"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
